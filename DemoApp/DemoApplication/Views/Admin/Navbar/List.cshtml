@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using DemoApplication.ViewModels.Admin.Navbar
@model List<NavbarListViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-controller="Navbar" asp-action="add" target="_blank" class="btn btn-secondary">Add new Navbar</a>
        </div>
        <div class="">
            <a asp-controller="SubNavbar" asp-action="add" target="_blank" class="btn btn-secondary">Add new Subnavbar</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Books</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>IsMain</th>
                            <th>Row</th>
                            <th>IsHeader</th>
                            <th>IsFooter</th>
                            <th class="text-end">Actions</th>

                        </tr>
                    </thead>
                    <tbody>
  
                        @foreach (var navbar in Model)
                        {
                            <tr>
                                <td>@navbar.Name</td>
                                <td>@navbar.IsMain</td>
                                <td>@navbar.Row</td>
                                <td>@navbar.IsHeader</td>
                                <td>@navbar.IsFooter</td>
                                <td class="text-end">
                                    <a asp-route="navbar-update" asp-route-id="@navbar.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                     <form method="POST" asp-route="navbar-delete" asp-route-id="@navbar.Id" id="navbar-form-@navbar.Id" ></form>
                                     <button type="submit" form="navbar-form-@navbar.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>    
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>