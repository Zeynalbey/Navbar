@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using DemoApplication.ViewModels.Admin.Navbar
@model NavbarUpdateViewModel 
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Navbars</h4>
            </div>
            <div class="card-body">
                <div class="general-label">
                    <form method="POST" asp-controller="Navbar" asp-action="update">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>


                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Row"></label>
                            <input asp-for="Row" class="form-control">
                            <span asp-validation-for="Row" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch">
                            <label asp-for="IsMain"></label>
                            <input type="checkbox" asp-for="IsMain" class="form-check-input">
                            <span asp-validation-for="IsMain" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch">
                            <label asp-for="IsHeader"></label>
                            <input type="checkbox" asp-for="IsHeader" class="form-check-input">
                            <span asp-validation-for="IsHeader" class="text-danger"></span>
                        </div>
                        <div class="form-check form-switch">
                            <label asp-for="IsFooter"></label>
                            <input type="checkbox" asp-for="IsFooter" class="form-check-input">
                            <span asp-validation-for="IsFooter" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div><!--end card-body-->
        </div><!--end card-->
    </div>
</div>